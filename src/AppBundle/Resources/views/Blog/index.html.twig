{% extends "::base.html.twig" %}

{# Title of the Page #}
{% block title %}{{ parent() }} - {{ 'blog.title'|trans }}{% endblock %}

{# Content of the Page #}
{% block content -%}
    <h1 class="sr-only">{{ 'blog.title'|trans }}</h1>

    <div class="row">
        <div class="col-md-12">
            {# Display Edit link for Administrators #}
            {% if is_granted('ROLE_ADMIN') %}
                <div class="btns-top text-right">
                    <a href="{{ path('about_edit') }}" class="btn btn-primary">
                        <span class="fa fa-pencil"></span>
                        {{ 'about_edit'|trans }}
                    </a>
                </div>
            {% endif %}

            {% for post in posts %}
                <div class="panel panel-default">
                    <h2>{{ post.title }}</h2>
                </div>
            {% else %}
                {# Display a message #}
                <em class="no_record">{{ 'blog.no_record'|trans }}</em>
            {% endfor %}
        </div>
    </div>
{% endblock %}