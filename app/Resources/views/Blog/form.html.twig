{% extends "::base.html.twig" %}

{# Title of the Page #}
{% block title %}{{ parent() }} - {{ 'blog.title'|trans }}{% endblock %}

{# Content of the Page #}
{% block content -%}
    <h1 class="sr-only">{{ 'blog.title'|trans }}</h1>

    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            {{ form_start(form) }}
            <div class="panel panel-default">
                <div class="panel-body">
                    {{ form_widget(form) }}
                </div>
            </div>

            <div class="btns-bottom text-right">
                <button type="submit" class="btn btn-primary">
                    <span class="fa fa-check"></span>
                    Save
                </button>
                <a href="{{ path('blog') }}" class="btn btn-default">
                    <span class="fa fa-times"></span>
                    Cancel
                </a>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}